{
  "schemaVersion": 1,
  "id": "twitchchatbridge",
  "version": "${mod_version}",

  "name": "Twitch Chat Bridge",
  "icon": "assets/twitchchat/icon.png",
  "description": "Interconnect Minecraft chat with Twitch chat!",
  "authors": [
    "Kesuaheli",
    "pblop"
  ],
  "contact": {
    "homepage": "https://github.com/Kesuaheli",
    "issues": "https://github.com/Kesuaheli/twitch-chat-bridge/issues",
    "sources": "https://github.com/Kesuaheli/twitch-chat-bridge"
  },

  "license": "MIT",

  "environment": "client",
  "entrypoints": {
    "main": [ "de.kesuaheli.twitchchatbridge.TwitchChatMod" ]
  },
  "mixins": [
    "twitchchat.mixins.json"
  ],
  "accessWidener": "twitchchat.accesswidener",

  "depends": {
    "minecraft": "${minecraft_version}",
    "fabricloader": "${loader_version}",
    "fabric": "*",
    "java": ">=21"
  },
  "suggests": {
    "modmenu": ">=${modmenu_version}",
    "owo-lib": ">=${owo_config_version}"
  }
}
